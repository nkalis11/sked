generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model MaintenanceCard {
  id                   String              @id @default(cuid())
  Title                String
  Description          String
  manHours             Decimal
  System               String
  Subsystem            String
  Equipment            String
  periodicityFrequency Int?
  periodicityCode      Int
  Periodicity          PeriodicityCalendar
  assigneeId           String?
  dueDate              DateTime
  lastCompletedDate    DateTime?
  WorkcenterId         String?

  @@index([assigneeId])
  @@index([WorkcenterId])
}
model CompletedMaintenance {
  id                   String              @id @default(cuid())
  Title                String
  Description          String
  completedBy          String
  completionDate       DateTime
  completeOnTime       Boolean
  checkNotes           String?
  Periodicity          PeriodicityCalendar
}
enum PeriodicityCalendar {
  D
  W
  M
  Q
  S
  A
}

model System {
  id   String     @id @default(cuid())
  name SystemName
}

model MaintenanceIndex {
  id       Int    @id @default(autoincrement())
  mipCode  String
  SystemId String

  @@index([SystemId])
}

model AccomplishmentRating {
  id                   Int   @id @default(autoincrement())
  situationalRating    Float
  periodicRating       Float
  administrativeRating Float
}

enum SystemName {
  Air
  Ballast
  Trim
  Navigation
  Communication
  Propulsion
  Steering
  Electrical
}
