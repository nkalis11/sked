datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  
}

generator client {
  provider = "prisma-client-js"
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
model Clerk {
  id        String           @id @default(cuid())
  name      String
  email     String           @unique
}

model MaintenanceCard {
  id                   String              @id @default(cuid())
  Description          String
  manHours             Decimal
  System               String
  Subsystem            String
  Equipment            String
  periodicityFrequency Int
  periodicityCode      Int
  Periodicity          PeriodicityCalendar
  assigneeId           String

  @@index([assigneeId])
}

model ClerkCard {
  id            String           @id @default(cuid())
  clerkId       String
  maintenanceId String
}
model MaintenanceIndex {
  id                 Int                 @id @default(autoincrement())
  manHours           Decimal
  System             String
  mipCode            String
}

enum PeriodicityCalendar {
  Daily
  Weekly
  Monthly
  Quarterly
  Semiannually
  Annually
}



