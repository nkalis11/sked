datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  
}

generator client {
  provider = "prisma-client-js"
}


model MaintenanceCard {
  id                   String              @id @default(cuid())
  Title                String
  Description          String
  manHours             Decimal
  System               String
  Subsystem            String
  Equipment            String
  periodicityFrequency Int?               
  periodicityCode      Int
  Periodicity          PeriodicityCalendar
  assigneeId           String?
  dueDate              DateTime?
  lastCompletedDate    DateTime?

  @@index([assigneeId])
}
model System {
  id                 String              @id @default(cuid())
  name               SystemName
}

enum SystemName {
  Air
  Ballast
  Trim
  Navigation
  Communication
  Propulsion
  Steering
  Electrical
}

enum PeriodicityCalendar {
  D
  W
  M
  Q
  S
  A
}

model MaintenanceIndex {
  id                 Int                 @id @default(autoincrement())
  SystemId           String
  mipCode            String

  @@index([SystemId])
}

model AccomplishmentRating {
  id                 Int                 @id @default(autoincrement())
  situationalRating  Float
  periodicRating     Float
  administrativeRating Float
}





